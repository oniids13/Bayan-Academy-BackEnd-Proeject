<%- include('partials/header.ejs') %>

<div class="container">
    <h1>Add Item</h1>
    <div>
        <form action="">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="itemName" name="item" placeholder="Product Name" required>
                <label for="itemName">Product Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="itemCategory" name="category" placeholder="Product Category" required>
                <label for="itemCategory">Product Category</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="itemQty" name="qty" placeholder="Quantity">
                <label for="itemQty">Quantity</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="itemPrice" name="price" placeholder="Price" required>
                <label for="itemPrice">Price</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="itemDesc" name="desc" placeholder="Product Description">
                <label for="itemDesc">Description</label>
            </div>
            <div>
                <button class="btn btn-success" type="submit"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                  </svg></button>
            </div>
        </form>
        <div class="mt-3">
            <form action="/" method="GET">
                <button class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                  </svg></button>
            </form>
        </div>
    </div>
</div>





