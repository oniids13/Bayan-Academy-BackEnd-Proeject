<%- include('partials/header.ejs') %>

<div class="container">
    <div>
        <h2 class="py-3">Manage Inventory</h2>
        <form action="/add" method="GET">
            <button class="btn btn-primary">Add Item</button>
        </form>
        <div class="form-floating my-3">
            <input type="text" class="form-control" id="search" name="search" placeholder="Search Item">
            <label for="search"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg> 
              Search Item </label>
        </div>
    </div>
    <div>
        <table class="table table-striped table-hover border-primary">
            <thead>
                <tr>
                    <th scope="col">Product ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product Category</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <th scope="row"><%= item.id %></th>
                        <td><%= item.name %></td>
                        <td><%= item.category %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.price %></td>
                        <td><%= item.description %></td>
                        <td>
                            <button class="btn btn-success mx-2 my-2">Edit</button>
                            <button class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                <% }); %>
                
            </tbody>
        </table>
    </div>
</div>


<%- include('partials/footer.ejs') %>